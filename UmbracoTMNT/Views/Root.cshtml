@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using UmbracoTMNT.Models;
@{
    Layout = null;
    List<NinjaTurtle> turtles = Model.Content.Children.Select(x => x.GetPropertyValue<NinjaTurtle>(NinjaTurtle.PROPERTIES_ALIAS)).ToList();

}
<!DOCTYPE html>
<html>
<head>
    <title>TMNT!</title>
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <h1>Teenage Mutant Ninja Turtles</h1>
    <div class="container">
        @foreach (var turtle in turtles)
        {
            <div class="homeTurtle">
                <div>
                    <img src="@turtle.SmallImage" />
                    <a href="@uQuery.GetNode(turtle.Id).NiceUrl">@turtle.Name</a>
                </div>
            </div>
        }
    </div>
</body>
</html>
